<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ghReposFragment"><!--//todo rename nav_graph-->

    <!-- NAVIGATION -->
    <fragment
        android:id="@+id/ghReposFragment"
        android:name="com.jesusrojo.pagingdemo.ghrepos.presentation.ui.GHReposFragment"
        android:label="Fragment_GHRepos"
        tools:layout="@layout/items_layout" >
        <action
            android:id="@+id/action_ghReposFragment_to_ghRepoDetailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.jesusrojo.pagingdemo.ghrepos.presentation.ui.GHRepoDetailsFragment"
        android:label="Fragment_Details"
        tools:layout="@layout/details_layout" >
        <action
            android:id="@+id/action_ghRepoDetailFragment_to_ghReposFragment"
            app:destination="@id/ghReposFragment"
            app:popUpTo="@+id/ghReposFragment"
            app:popUpToInclusive="true"/>
        <argument
            android:name="selected_data"
            app:argType="com.jesusrojo.pagingdemo.ghrepos.data.model.GHRepo" />

    </fragment>
</navigation>